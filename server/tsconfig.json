{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    
    // --- Monorepo Configuration ---
    "rootDir": "src",
    "baseUrl": "..",
    "paths": {
      "@/*": ["server/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*.ts"],
  
  // --- This is the critical fix to ignore test files ---
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}